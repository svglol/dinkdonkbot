{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@kick-api": ["./src/kick/kick.ts"],
      "@twitch-api": ["./src/twitch/twitch.ts"],
      "@discord-api": ["./src/discord/discord.ts"],
      "@server": ["./src/server.ts"],
      "@database": ["./src/database/db.ts"]
    },
    "types": ["@cloudflare/workers-types", "@cloudflare/vitest-pool-workers"],
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "docs"
  ]
}
