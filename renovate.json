{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":labels(dependencies, chore)",
    ":pinDependencies",
    ":pinDevDependencies",
    ":maintainLockFilesWeekly",
    ":pinAllExceptPeerDependencies",
    ":widenPeerDependencies",
    ":semanticCommitTypeAll(chore)",
    "group:monorepos",
    "group:recommended",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks",
    ":automergePr",
    "npm:unpublishSafe"
  ],
  "packageRules": [
    {
      "rangeStrategy": "pin",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "extends": [
        "packages:test"
      ],
      "matchPackageNames": [
        "c8",
        "happy-dom",
        "jsdom",
        "vitest",
        "/^@vitest//"
      ],
      "groupName": "test packages"
    },
    {
      "extends": [
        "packages:linters"
      ],
      "matchPackageNames": [
        "@commitlint",
        "stylelint"
      ],
      "groupName": "all linters"
    }
  ],
  "timezone": "Pacific/Auckland",
  "prCreation": "immediate"
}
